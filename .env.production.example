# Production Environment Configuration
# Copy this file to .env.production and update values

# Application
ENVIRONMENT=production
APP_NAME=another-doctor
DEBUG=false

# Database (Cloud SQL)
DATABASE_URL=postgresql://app_user:PASSWORD@PRIVATE_IP:5432/another_doctor
# Alternative using Cloud SQL Connector:
# DATABASE_URL=postgresql://app_user:PASSWORD@/another_doctor?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# Redis (Memorystore)
REDIS_URL=redis://REDIS_PRIVATE_IP:6379

# Vector Database (Qdrant on Cloud Run)
QDRANT_URL=https://QDRANT_SERVICE_URL
QDRANT_API_KEY=your-qdrant-api-key-if-needed

# Cloud Storage
CLOUD_STORAGE_BUCKET=PROJECT_ID-another-doctor-prod-storage
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Security
SECRET_KEY=projects/PROJECT_ID/secrets/another-doctor-prod-app-secret-key/versions/latest
ALLOWED_HOSTS=*.run.app,yourdomain.com
BACKEND_CORS_ORIGINS=https://frontend-service-url.run.app,https://yourdomain.com

# External APIs
PUBMED_API_KEY=your-pubmed-api-key
CROSSREF_EMAIL=your-email@yourdomain.com
NIH_REPORTER_API_KEY=your-nih-api-key
OPENALEX_EMAIL=your-email@yourdomain.com

# LLM Services (External)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-if-using
NEW_RELIC_LICENSE_KEY=your-new-relic-key-if-using

# Cloud Run specific
PORT=8000
WORKERS_CONCURRENCY=4

# Service URLs (populated by deployment)
BACKEND_URL=https://backend-service-url.run.app
FRONTEND_URL=https://frontend-service-url.run.app
WORKERS_URL=https://workers-service-url.run.app